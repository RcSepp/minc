/* ---------------------------------------------------------------------------*\
Name: string declaration
Template: string $I = $E
Depends on: none
\* ---------------------------------------------------------------------------*/
stmtdef string $I {
	LLVMValueRef foo = LLVMBuildAlloca(LLVMPointerType(LLVMInt8Type(), 0), "");
	LLVMSetAlignment(foo, 8);
	addToScope(parentBlock, $0, int, foo);
}

/* ---------------------------------------------------------------------------*\
Name: string declaration with initialization
Template: string $I = $E
Depends on: LLVMValueRef $I = $E
\* ---------------------------------------------------------------------------*/
stmtdef string $I = $E {
	LLVMValueRef foo = LLVMBuildAlloca(LLVMPointerType(LLVMInt8Type(), 0), "");
	LLVMSetAlignment(LLVMBuildStore(
		$1.codegen(parentBlock),
		foo
	), 8);
	addToScope(parentBlock, $0, int, foo);
}

