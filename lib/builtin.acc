exprdef<string> $<LiteralExprAST>.value {
	LLVMValueRef args[1];
	args[0] = LLVMBuildBitCast(
		codegen($0, parentBlock),
		LLVMPointerType(LLVMGetTypeByName("class.LiteralExprAST"), 0),
		""
	);
	return LLVMBuildCall(
		LLVMGetNamedFunction("getLiteralExprASTValue"),
		args,
		1,
		""
	);
}

