paws_castdef<int> PawsInt {
	return LLVMConstInt(LLVMInt32Type(), $0.codegen(parentBlock), 1);
}

paws_castdef<half> PawsDouble {
	return LLVMConstReal(LLVMHalfType(), $0.codegen(parentBlock));
}
paws_castdef<float> PawsDouble {
	return LLVMConstReal(LLVMFloatType(), $0.codegen(parentBlock));
}
paws_castdef<double> PawsDouble {
	return LLVMConstReal(LLVMDoubleType(), $0.codegen(parentBlock));
}

paws_castdef<string> PawsString {
	str = $0.codegen(parentBlock);
	glob = LLVMAddGlobal(LLVMArrayType(LLVMInt8Type(), str.length + 1), "MY_CONSTANT");
	LLVMSetLinkage(glob, 9);
	LLVMSetGlobalConstant(glob, 1);
	LLVMSetInitializer(glob, LLVMConstString(str, str.length + 1, 1));
	LLVMSetUnnamedAddress(glob, 2);
	LLVMSetAlignment(glob, 1);

	return LLVMConstInBoundsGEP2(
		glob,
		LLVMConstInt(LLVMInt64Type(), 0, 0),
		LLVMConstInt(LLVMInt64Type(), 0, 0)
	);
}


