/* ---------------------------------------------------------------------------*\
Name: Simplified variable assignment
Template: $I = $E
Depends on: return $E
Notes: This expression does not check for errors and it does not return $E
\* ---------------------------------------------------------------------------*/
exprdef<void> $I = $E {
	LLVMEXBuildStore($1.codegen(parentBlock), LookupScope(parentBlock, $0));
	return LLVMConstNull(LLVMVoidType());
}

paws_exprdef<void> addToScope($E<BlockExprAST>, $E<IdExprAST>, $E<BaseType>, $E<LLVMValueRef>) {
	import paws.array;
	args = [
		$0.codegen(parentBlock),
		$1.codegen(parentBlock),
		$2.codegen(parentBlock),
		$3.codegen(parentBlock)
	];
	LLVMBuildCall(AddToScope, args, 4, "");
	return LLVMConstNull(LLVMVoidType());
}


